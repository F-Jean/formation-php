{% extends 'templates/without_sidebar.html.twig' %}

{% block title %}{{ parent() }} - Gestion des produits{% endblock %}

{% block content %}
    <div class="col-md-6 col-md-offset-3">
        <div class="jumbotron">
            <h1>Modifier d'un produit</h1>
        </div>
        <form method="post">
            <div class="form-group">
                <label>Nom de la produit :</label>
                <input type="text" class="form-control" required name="name" value="{{ product.name }}"/>
            </div>
            <div class="form-group">
                <label>Description du produit :</label>
                <textarea class="form-control" required name="description">{{ product.description }}</textarea>
            </div>
            <div class="form-group">
                <label>Prix HT du produit :</label>
                <input type="number" step="0.01" class="form-control" required name="price_et" value="{{ product.priceET }}"/>
            </div>
            <div class="form-group">
                <label>TVA du produit :</label>
                <input type="number" step="0.01" class="form-control" required name="vat" value="{{ product.vat }}"/>
            </div>
            <div class="form-group">
                <label>Marque du produit :</label>
                <select class="form-control" required name="brand_id">
                    {% for brand in brands %}
                        <option {{ brand == product.brand ? "selected" :"" }} value="{{ brand.id }}">{{ brand.name }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="form-group">
                <label>Cat√©gorie du produit :</label>
                <select class="form-control" required name="category_id">
                    {% for category in categories %}
                        <option {{ category == product.category ? "selected" :"" }} value="{{ category.id }}">{{ category.name }}</option>
                    {% endfor %}
                </select>
            </div>
            <button type="submit" class="btn btn-block btn-success">Valider</button>
        </form>
    </div>
{% endblock %}
